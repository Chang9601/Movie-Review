<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chang.recmv.mapper.MovieMapper">
	<insert id="addMovie">
		insert into recmv_movie(title, link, image, cast, plot, createDate)
		values(#{title}, #{link}, #{image}, #{cast}, #{plot}, now())
	</insert>
	
	<select id="ckDupMovie" resultType="int">
		select num from recmv_movie
		where title = #{title}
	</select>
	
	<select id="readMovie" resultType="Movie">
		select * from recmv_movie
		where title = #{title}
	</select>
	
	<select id="getMovies" resultType="Movie">
		select * from recmv_movie
		limit #{beginNumOfItems}, #{numOfItemsPerPage}				
	</select>

	<select id="getNumMovies" resultType="int">
		select count(*)
		from recmv_movie
	</select>	
</mapper>